@{
}<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My ASP.NET Core App</title>

    <link rel="stylesheet" href="~/-/styles/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav aria-label="Language selection">
            <ul>
                <li><a href="/" lang="en">English</a></li>
                <li><a href="/zh" lang="zh">中文 (Simplified)</a></li>
                <li><a href="/zh-hk" lang="zh-HK">中文 (Hong Kong)</a></li>
                <li><a href="/ar" lang="ar" dir="rtl">العربية</a></li>
            </ul>
        </nav>
        <hr />
        <h1>My ASP.NET Core App</h1>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="About" asp-action="Index">About</a></li>
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - My Website</p>
        <p id="target-css"></p>
        <p id="target-js"></p>
    </footer>

    <script src="~/-/scripts/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

